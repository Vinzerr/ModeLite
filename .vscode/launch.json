    "version": "0.2.0",
    "isShellCommand": true,
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": ["--inspect-brk", "${workspaceFolder}/experimental-ts/index.js"],
            "restart": true,
            "timeout": 60000,
            "stopOnEntry": false,
            "console": "integratedTerminal",
            "runtimeExecutable": "node",
            "program": "${workspaceFolder}/experimental-ts/index.js",
        }
    ]
}